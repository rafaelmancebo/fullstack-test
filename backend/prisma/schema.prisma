datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id      Int       @id @default(autoincrement())
    name    String
    email   String    @unique
    Address Address[]
}

model Address {
    id     Int    @id @default(autoincrement())
    street String
    city   String
    state  String
    userId Int
    user   User   @relation(fields: [userId], references: [id])
}
